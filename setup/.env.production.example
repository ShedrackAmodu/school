# Production Environment Variables Template
# Copy this file to .env and update with your production values

# Django Core Settings
DEBUG=False
SECRET_KEY=your-50-character-secret-key-here-make-it-very-long-and-random
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,your-server-ip

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/school_db

# Email Configuration (Update with your email provider)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.your-email-provider.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@yourdomain.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com
SERVER_EMAIL=errors@yourdomain.com

# SendGrid (if using SendGrid for email)
SENDGRID_USERNAME=your-sendgrid-username
SENDGRID_PASSWORD=your-sendgrid-api-key

# Redis Configuration (for Channels and caching)
REDIS_URL=redis://localhost:6379/0

# Security Settings
CSRF_COOKIE_SECURE=True
SESSION_COOKIE_SECURE=True
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000

# Optional: Error Monitoring
SENTRY_DSN=your-sentry-dsn-here


